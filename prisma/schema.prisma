// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials provider
  role          String    @default("user") // user, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  favorites     Favorite[]
  visitHistory  VisitHistory[]
  reports       Report[]
  shopSubmissions ShopSubmission[]

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Shop model with status for moderation
model Shop {
  id        String   @id @default(uuid())
  name      String
  address   String
  city      String
  latitude  Float
  longitude Float
  rating    Float    @default(0)
  priceLevel Int     @default(1)
  tags      String[]
  features  Json     // { noise, outlets, wifi, seating, lighting, privacy } all 1-5
  status    String   @default("approved") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews         Review[]
  favorites       Favorite[]
  visitHistory    VisitHistory[]
  shopSubmissions ShopSubmission?

  @@index([city])
  @@index([latitude, longitude])
  @@index([status])
}

// Review model
model Review {
  id        String   @id @default(uuid())
  shopId    String
  userId    String
  ratings   Json     // { noise, outlets, wifi, seating, lighting, privacy, busyness } all 1-5
  text      String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([shopId, userId]) // One review per user per shop
  @@index([shopId])
  @@index([userId])
}

// Favorite model
model Favorite {
  id        String   @id @default(uuid())
  shopId    String
  userId    String
  createdAt DateTime @default(now())

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([shopId, userId]) // One favorite per user per shop
  @@index([shopId])
  @@index([userId])
}

// Visit History model
model VisitHistory {
  id        String   @id @default(uuid())
  shopId    String
  userId    String
  visitedAt DateTime @default(now())

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([userId])
  @@index([visitedAt])
}

// Report model
model Report {
  id        String   @id @default(uuid())
  type      String   // review, shop, user
  targetId  String
  targetName String
  reason    String   @db.Text
  reportedBy String
  status    String   @default("pending") // pending, resolved, dismissed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [reportedBy], references: [id], onDelete: Cascade)

  @@index([type, targetId])
  @@index([status])
  @@index([reportedBy])
}

// Shop Submission model
model ShopSubmission {
  id        String   @id @default(uuid())
  shopId    String?  @unique // null if pending, set when approved
  submittedBy String
  name      String
  address   String
  city      String
  latitude  Float
  longitude Float
  priceLevel Int     @default(1)
  tags      String[]
  features  Json
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop Shop?  @relation(fields: [shopId], references: [id], onDelete: SetNull)
  user User   @relation(fields: [submittedBy], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([submittedBy])
}

